{
  "cli": {
    "version": ">= 16.17.4",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle"
      }, // Play Store (AAB)
      "distribution": "store"
    },
    "apk": {
      "android": {
        "buildType": "apk"
      }, // manuell installierbares APK
      "distribution": "internal"
    }
  },
  "submit": {
    "production": {}
  }
}